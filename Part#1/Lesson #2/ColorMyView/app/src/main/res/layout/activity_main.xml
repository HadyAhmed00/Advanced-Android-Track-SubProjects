<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/vviieeww"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/box_one_txt"
                style="@style/text_Style"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/DKGRAY"
                android:text="@string/BoxOne" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/box_tow_txt"
                    style="@style/text_Style"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/GRAY"
                    android:text="@string/BoxTwo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/box_tree_txt"
                        style="@style/text_Style"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/holo_green_light"
                        android:text="@string/BoxThree" />

                    <TextView
                        android:id="@+id/box_four_txt"
                        style="@style/text_Style"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/holo_green_dark"
                        android:text="@string/BoxFour" />

                    <TextView
                        android:id="@+id/box_five_txt"
                        style="@style/text_Style"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/holo_green_light"
                        android:text="@string/BoxFive" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.977">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Red" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/Yellow" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Greed" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
